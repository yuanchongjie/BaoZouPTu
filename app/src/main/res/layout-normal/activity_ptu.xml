<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ptu_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/ptu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ptu_toolbar_background"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        >
        <a.baozouptu.ptu.view.PtuTopRealtiveLayout
            android:id="@+id/ptu_toolbar_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ptu_top_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:background="#0000">
            </LinearLayout>
        </a.baozouptu.ptu.view.PtuTopRealtiveLayout>
    </android.support.v7.widget.Toolbar>

    <a.baozouptu.ptu.view.PtuFrameLayout
        android:id="@+id/ptu_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:background="#0000">

        <a.baozouptu.ptu.view.PtuView
            android:id="@+id/ptu_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000"/>
    </a.baozouptu.ptu.view.PtuFrameLayout>

    <FrameLayout
        android:id="@+id/fragment_function"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#0000" />
</LinearLayout>