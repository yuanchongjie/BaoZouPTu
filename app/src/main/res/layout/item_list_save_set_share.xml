<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/save_set_item_share_icon"
        android:layout_width="@dimen/list_item_width_save_set_middle"
        android:layout_height="@dimen/list_item_width_save_set_middle"
        android:maxHeight="@dimen/list_item_width_save_set_middle"
        android:maxWidth="@dimen/list_item_width_save_set_middle"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/save_set_item_share_title"
        android:layout_width="@dimen/list_item_width_save_set_wide"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/list_item_width_save_set_wide"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:maxLines="1"
        android:textSize="7pt"
        android:ellipsize="end"
        />
</LinearLayout>