<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_function_item_image"
            android:paddingTop="2dp">

            <LinearLayout
                android:id="@+id/add_text_toumingdu"
                android:layout_width="@dimen/function_width"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    style="@style/function_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:src="@mipmap/transparency"
                    android:id="@+id/imageView" />

                <TextView

                    android:layout_width="@dimen/function_width"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="透明度"
                    style="@style/function_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_text_style"
                android:layout_width="@dimen/function_width"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    style="@style/function_image"
                    android:src="@mipmap/bold" />

                <TextView
                    style="@style/function_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="风格" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_text_color"
                android:layout_width="@dimen/function_width"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    style="@style/function_image"
                    android:src="@mipmap/color" />

                <TextView
                    style="@style/function_text"
                    android:layout_width="@dimen/function_width"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="颜色" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_text_typeface"
                android:layout_width="@dimen/function_width"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    style="@style/function_image"
                    android:src="@mipmap/typeface" />

                <TextView
                    style="@style/function_text"
                    android:id="@+id/textView3"
                    android:layout_width="@dimen/function_width"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="字体" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_rubber"
                android:layout_width="@dimen/function_width"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    style="@style/function_image"
                    android:src="@mipmap/rubber" />

                <TextView
                    style="@style/function_text"
                    android:id="@+id/textView"
                    android:layout_width="@dimen/function_width"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="橡皮" />
            </LinearLayout>

